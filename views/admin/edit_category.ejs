<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">

            <!-- end page-title -->


            <div class="row " style="justify-content: center;">
                <div class="col-lg-10 mt-4">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Catgoriya tahrirlash. </h4>

                            <p class="sub-title"> Eski Kategoriya nomi : <%= data.name%>
                            </p>
                            <form action="/api/category/update/<%=data._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Kategoriya nomi</label>
                                    <textarea rows="3" type="text" name="name" class="form-control"
                                        data-parsley-minlength="7" required placeholder="Yangi kategoriya "></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Kategoriya qiymati</label>
                                    <textarea rows="3" type="text" name="value" class="form-control"
                                        data-parsley-minlength="1" required placeholder="Yangi qiymat "></textarea>
                                </div>


                                <div class="input-group mb-3 pb-3 mt-2">
                                    <div class="file-upload" style="width: 100%;">
                                        <div class="image-upload-wrap">
                                            <input name="photo" class="file-upload-input" class="form-control"
                                                type="file" onchange="readURL(this);" required />
                                            <div class="drag-text">
                                                <h3>Rasm tanlang</h3>
                                            </div>
                                        </div>
                                        <div class="file-upload-content">
                                            <img class="file-upload-image" />
                                            <div class="image-title-wrap">
                                                <button type="button" onclick="removeUpload()" class="remove-image">
                                                    O'chirish <span class="image-title">Rasmni yuklash</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancel
                                </button>
                            </form>
                        </div>
                    </div>


                </div>
            </div>
        </div> <!-- end col -->

    </div> <!-- end row -->
</div>