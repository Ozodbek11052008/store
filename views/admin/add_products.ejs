<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">

            <!-- end page-title -->

            <div class="row " style="justify-content: center;">
                <div class="col-lg-10 mt-4">
                    <div class="card m-b-30">
                        <div class="card-body">
                            <h4 class="mt-0 header-title">Yangi Maxsulot qoshish</h4>
                            <p class="sub-title">Maxsulot nomi , va bohqa propertylari kiritilishi shart.</p>
                            <form action="/create/product" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label>Maxsulot nomi</label>
                                    <textarea rows="3" type="text" name="name" class="form-control"
                                        data-parsley-minlength="3" required placeholder="Kerasys Shampun"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Maxsulot narxi</label>
                                    <textarea rows="3" type="text" name="price" class="form-control"
                                        data-parsley-minlength="1" required placeholder="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label>Maxsulot Tarkibi</label>
                                    <textarea data-parsley-minlength="10" required id="elm1" name="composition"
                                        class="form-control" rows="5"> </textarea>
                                </div>
                                <div class="form-group">
                                    <label>Kategoriya qo'shish</label>
                                    <div>
                                        <select required name="categoryId" class="form-control">
                                            <% category[0] ? category.map(item => {%>
                                                <option value="<%= item._id%>"><%= item.name%></option>
                                            <% }) : "Kategoriyalar yo'q"%>
                                        </select>
                                    </div>
                                </div>
                                <div class="input-group mb-3 pb-3 mt-2">
                                    <div class="file-upload" style="width: 100%;">
                                        <div class="image-upload-wrap">
                                            <input name="photo" class="file-upload-input" class="form-control"
                                                type="file" onchange="readURL(this);" required />
                                            <div class="drag-text">
                                                <h3>Rasm tanlang</h3>
                                            </div>
                                        </div>
                                        <div class="file-upload-content">
                                            <img class="file-upload-image" />
                                            <div class="image-title-wrap">
                                                <button type="button" onclick="removeUpload()" class="remove-image">
                                                    O'chirish <span class="image-title">Rasmni yuklash</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Maxsulot ma'lumoti</label>
                                    <textarea data-parsley-minlength="10" required id="elm1" name="description"
                                        class="form-control" rows="5"> </textarea>
                                </div>
                                <button type="submit" class="btn btn-primary waves-effect waves-light">
                                    Submit
                                </button>
                                <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                                    Cancel
                                </button>
                        </div>
                    </div>
                    </form>

                </div>
            </div>
        </div> <!-- end col -->

    </div> <!-- end row -->
</div>
<!-- content -->